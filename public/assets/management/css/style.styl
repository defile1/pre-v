body
    background #f2f2f2
#main-content
    padding 1rem
.models
    .model
        position relative
        .removeModel
            position absolute
            right 0
            top 20px

        .tag-editor
            min-height 50px
            input
                height auto
#header
    display block
    .icon
        margin-right 0
        font-size 24px
    #main-menu
        margin 0
        padding 0
        float right
        > li
            list-style none
            float left
            &:last-child
                margin-right 0
            &#outer-logo
                padding 5px 1.14285714em
                position relative
                &:before
                    position: absolute
                    content ''
                    top 0
                    right 0
                    height 100%
                    width 1px
                    background: rgba(34,36,38,.1)
                a
                    padding 0
    #logo
        font-size 0
        display block
        line-height 0
        img
            max-height 40px
    .the-menu-icon
        float left

.ui-effects-transfer
    border: 1px solid #2185D0


@media screen and (max-width: 1480px)
    #main-content
        padding-right 240px
@media screen and (max-width: 767px)
    #main-content
        padding-right 44px