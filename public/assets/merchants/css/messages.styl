.list-message
    display none
    h2
        border-bottom 1px solid rgba(0,0,0,0.1)
        padding-bottom 20px
    h3
        float left
    time
        font-size 1em;
        display block
        margin-bottom 10px;
        float right
        color #999
    .list-message-wrapper
        // height 350px
        ul
            > li
                border-bottom 1px solid rgba(0,0,0,0.1)
                padding-bottom 20px
                margin-bottom 20px
                &:last-child
                    margin-bottom 0
                    padding-bottom 0
                    border-bottom 0
    .form-field
        margin-bottom 5px
        border-top 1px solid rgba(0,0,0,0.1)
        padding-top 20px
        margin-top 20px
    &:first-child
        display block
#list-message-senders
    > ul
        padding 0
        > li
            border-bottom 1px solid rgba(0,0,0,0.1)
            &:last-child
                margin-bottom 0
                padding-bottom 0
                border-bottom 0
            > a
                display block
                padding 30px
                text-decoration none
                h3
                    margin-bottom 5px
                time
                    display block
            &.unread-message
                h3
                    position relative
                    display inline-block
                    padding-right 20px
                    &:after
                        content ""
                        background #60beff
                        width 10px
                        height 10px
                        display block
                        position absolute
                        right 0px
                        top 0px
                        border-radius 100px
            &.selected-message
                background rgba(9,183,68,0.1)
.mCSB_scrollTools
    opacity 0
    .mCSB_dragger
        .mCSB_dragger_bar, &:hover .mCSB_dragger_bar
            background #1f1f1f!important
            margin-right 0
    .mCSB_draggerRail
        background transparent