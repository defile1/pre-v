// @import '/css/single-watch.css'
$mobile = 767px
$tablet = 959px

.conditions
    padding-top 50px;
    .labeled
        display inline-block
        width 60px
#upper-product
    margin-bottom 50px
    h1
        font-size 1.875em
        font-weight 400
.tabs
    font-size 0
    li
        display inline-block
        font-size 16px
        &:last-child
            margin-right 0
        a
            font-size 1em
            padding 16px 20px
            display block
            border-bottom 0
            text-transform uppercase
        &.current-tab
            a
                position relative
                // background #fff
                &:after
                    content ""
                    width 0
                    height 0
                    border-left 10px solid transparent
                    border-right 10px solid transparent
                    border-bottom 10px solid #fff
                    position absolute
                    bottom 0px
                    left 50%
                    transform translateX(-50%)
                    -webkit-transform translateX(-50%)
                    -moz-transform translateX(-50%)
                    -ms-transform translateX(-50%)
        @media screen and (max-width: $mobile)
            font-size 12px
            a
                padding 19px  20px
.partial
    display none
    margin-bottom 0px
    padding 25px
    background #fff
    box-shadow 0px 0px 10px rgba(0,0,0,0.1)
    &:last-child
        margin-bottom 0
    .product-info
        > li
            border-bottom 1px solid #efefef
            padding 10px 0
            strong,span
                width 50%
                float left
                display block
            strong
                padding-right 20px
            &:last-child
                border-bottom 0
    &:first-child
        display block
.sub-title
    border-bottom 1px solid #a7a7a7
    padding-bottom 15px
.product-price
    font-size 1.875em
    display block
.left-product-content
    padding-right 15px
.right-product-content
    padding-left 15px
#seller-info
    background #fff
    margin-top 85px
#seller-info
    padding 65px 0
#related-products
    padding 85px 0 0
#seller-contact-details
    h5
        margin-bottom 10px
        font-size 1.250em
        text-transform none
        font-weight 400
    p,ul
        font-size 1.250em
        font-weight 300
        margin-bottom 30px
    ul
        > li
            margin-bottom 30px
            &:last-child
                margin-bottom 0
        &.contact-info
            > li
                margin-bottom 0
                line-height 1.61em
                > strong
                    font-weight 400
#quick-seller-info
    margin-top 30px
    border-top 1px solid #a7a7a7
    padding-top 30px
    .flag
        margin 0 0 0 15px
    h5
        margin-bottom 10px
        font-size 1.125em
    p
        font-size 1.250em
        margin-bottom 20px
    .btn
        border-radius 0
        -webkit-border-radius 0
        -moz-border-radius 0
#primary-product-image
    background #fff
    box-shadow 1px 1px 6px 4px rgba(0,1,1,0.06)
    // padding 20px
    padding 5px
    height 500px
    text-align center
    width 100%
    img
        max-width 100%
        max-height 100%
    @media screen and (max-width: $mobile)
        height 300px
#single-images
    margin-top 10px
    font-size 0
    margin-left -10px
    > li
        display inline-block
        width 20%
        font-size 12px
        padding-left 10px
        vertical-align top
        margin-bottom 10px
        @media screen and (max-width: $mobile)
            width 50%
        a
            box-shadow 1px 1px 6px 4px rgba(0,1,1,0.06)
            text-align center
            background #fff
            padding 2px
            height 100px
            img
                max-width 100%
                max-height 100%
.cover-product-image
    display block
    width 100%
    height 100%
    background-position center center
.single-product
    h2
        font-size 1.3em
        text-transform none
#product-description
    padding-top 16px
    p
        font-size 1.25em
        font-weight 300
.companyLogo
    max-width 100%
@media screen and (max-width: $tablet)
    .tablet-no-padding
        padding 0
@media screen and (max-width: $mobile)
    .mobile-no-padding
        padding 0
    #product-info
        margin-bottom 40px
