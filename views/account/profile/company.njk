<form   method="POST"
        class="grid-75 no-padding-right right-content form ajax tablet-no-padding"
        action="./"
>
    <input type="hidden" name="_method" value="PUT">
    <div class="grid-30 tablet-grid-30 mobile-no-padding no-padding-left left-content">
        <div class="ui centered card dropzone" style="text-align: center;">
            <div class="ui centered massive spaced image">
                {% if user.companies.image %}
                    <div class="ui image ">
                        <img class="full-width main-single-watch-image" src="{{ user.companies.image.src or Site.noPhoto }}" />
                    </div>
                {% else %}
                    <i class="image icon massive"></i>
                {% endif %}
                <div class="dropzone-previews meta" data-autoProcessQueue="true" data-url="../upload/companies/" ></div>
            </div>
            <div class="content">
                <h4 class="header">Company Logo/Storefront</h4>

                <div class="dz-default dz-message"><span>Drop files or click <a href="#" class="btn link no-transform">here</a><br /> to upload and press update.</span></div>
            </div>
        </div>
    </div>
    <div id="persons-form" class="grid-70 tablet-grid-70 mobile-no-padding no-padding-right right-content">
        <div class="field-wrapper clearfix">
            <div class="form-field field-wrapped grid-50 tablet-grid-50 no-padding-right">
                {{ forms.input('users[companies][name]', value=user.companies.name, label="Company name") }}
            </div>
            <div class="form-field field-wrapped grid-50 tablet-grid-50 no-padding-right">
                {{ forms.input('users[companies][website]', value=user.companies.website, label="Company website", placeholder="www.") }}
            </div>
        </div>
        <div class="field-wrapper clearfix">
            <div class="form-field field-wrapped grid-50 tablet-grid-50 no-padding-right">
                {{ forms.input('users[companies][tel]', value=user.companies.tel, label="Company telephone number") }}
            </div>
            <div class="form-field field-wrapped grid-50 tablet-grid-50 no-padding-right">
                {{ forms.input('users[companies][email]', value=user.companies.email, label="Company email") }}
                <small>This email can be different to your login email.</small>
            </div>
        </div>
        <strong>Opening Hours:  </strong>
        {% set openings = ["monday","tuesday","wednesday","thursday","friday","saturday","sunday"] %}
        {% for opening in openings %}
            <div class="field-wrapper clearfix opening-hours">
                <div class="form-field field-wrapped grid-20 tablet-grid-20 no-padding-right opening-hours-day">
                    <label>
                        <span class="label-text">{{ opening | capitalize }} *</span>
                    </label>
                </div>
                <div class="form-field field-wrapped grid-40 tablet-grid-40 mobile-grid-50 no-padding-right">
                    {{ forms.input('users[companies][opening]['+opening +'][from]', value=user.companies.opening[opening].from ) }}
                </div>
                <div class="form-field field-wrapped grid-40 tablet-grid-40 mobile-grid-50 no-padding-right">
                    {{ forms.input('users[companies][opening]['+opening +'][to]', value=user.companies.opening[opening].to ) }}
                </div>
            </div>
        {% endfor %}


        <div class="right">
            <button type="submit" class="btn submit-btn large-btn">Save</button>
        </div>
    </div>
</form>