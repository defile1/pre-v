{% extends "site/index.njk" %}

{% block content %}
    {# {% include "site/templates/page-form.njk" %} #}
    <div id="page-content" class="container">
        <div class="grid-container">
            <h1>Reset Password</h1>
            {% if message %}
                <p>{{message}}</p>
            {% else %}
                <form method="POST" action="/account/forgot-password/{{token}}/" class="ui form">
                    <div class="field">
                        <input type="text" name="email" placeholder="Email" />
                    </div>
                    <div class="field">
                        <input type="password" name="password" placeholder="New password" />
                    </div>
                    <div class="field">
                        <input type="password" name="confirm" placeholder="Confirm new password" />
                    </div>
                    <button type="submit" class="ui button primary">Reset Password</button>
                </form>
            {% endif %}
        </div>
    </div>
{% endblock %}